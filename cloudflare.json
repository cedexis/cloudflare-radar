            "TOS": "http://www.cedexis.com/legal/terms.html",
            "has_js": true
        },
        "interface": 
        [
            {
                "type": "string",
                "name": "firstName",
                "description": "Your first name",
                "id": "firstName",
                "domain_request": true
            },
            {
                "type": "string",
                "name": "lastName",
                "description": "Your last name",
                "id": "lastName",
                "domain_request": true
            },
            {
                "type": "string",
