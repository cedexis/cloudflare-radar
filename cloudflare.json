    "config":
    {
        "assets":{
            "logos" : {
                "200px": "./public/images/logo-200.png",
                "132px": "./public/images/logo-132.png"
            },
            "detail_page" : [
                "./public/images/example.png",
                "./public/images/alerts-screen.png",
                "./public/images/plt-charts.png"
            ]
        },
        "details":
        {
            "Category": "Monitoring",
            "Language": "English, French, German, Portuguese, Chinese, Japanese",
            "Price" :  "Free $0, Pro $10, Business $100 and Enterprise $1,000",
